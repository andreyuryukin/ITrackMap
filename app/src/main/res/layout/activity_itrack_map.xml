<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageWalk"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:src="@drawable/ic_walk"
            android:layout_row="1" />

        <ImageView
            android:id="@+id/imageDrive"
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:src="@drawable/ic_drive"
            android:layout_row="1" />

        <ImageView
            android:id="@+id/imageSpeed"
            android:layout_width="wrap_content"
            android:layout_column="4"
            android:src="@drawable/ic_speed"
            android:layout_row="1" />

        <TextView
            android:id="@+id/textDist"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:text="999 m"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_column="4"
            android:layout_span="2"
            android:text="50 Km/H"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" />
    </GridLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="4"
        tools:context="com.example.desktop.itrackmap.ITrackMapActivity"
        tools:layout="@layout/abc_screen_simple" />

</LinearLayout>





